<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5722"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.univalsoft.gongqzs.Login">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.54"
        android:background="@color/bg1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"></RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#455566" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#455566" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="220dp"
        android:layout_height="266dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/yonghuming1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_down"
                android:gravity="center"
                android:hint="输用户名"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#e8e8e0"
                android:textCursorDrawable="@null"
                android:textSize="15sp">

                <requestFocus />
            </EditText>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#455566" />

            <Button
                android:id="@+id/clear11"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_x_circle_white"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ww"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="1dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#455566" />

            <EditText
                android:id="@+id/mima22"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_down"
                android:gravity="center"
                android:hint="输入密码"
                android:password="true"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#e8e8e0"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/white" />

        </RelativeLayout>

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/login"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_style1"
            android:text="注册"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout2"
            android:background="@color/white" />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittext_down"
            android:gravity="center"
            android:hint="重复密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#e8e8e0"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white" />

        <View
            android:id="@+id/View01"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/EditText01"
            android:layout_alignParentLeft="true"
            android:background="@color/white" />

        <Button
            android:id="@+id/login222"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/EditText01"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_style1"
            android:text="加入一刻"
            android:textColor="#ffffff"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl"
        android:layout_alignLeft="@+id/rl"

        android:padding="0dp">

        <AutoCompleteTextView
            android:id="@+id/yonghuming22"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/edittext_down"
            android:completionThreshold="@null"
            android:ems="10"
            android:gravity="center"

            android:hint="输入邮箱"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#e8e8e0"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"

                android:layout_alignTop="@+id/textView1"
                android:layout_toLeftOf="@+id/textView1"
                android:layout_toStartOf="@+id/textView1" />
            <TextView android:layout_marginTop="49dp"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.54"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="45sp"

                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>