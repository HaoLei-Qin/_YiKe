<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"


    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_shanchu"
        android:layout_width="20dp"
        android:layout_height="20dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/aaaaww1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/atext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"

        android:layout_toEndOf="@+id/atext1"
        android:layout_toRightOf="@+id/atext1"
        android:gravity="center"
        android:text="2015.1.05"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/atext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_toEndOf="@+id/imageView_shanchu"
        android:layout_toRightOf="@+id/imageView_shanchu"

        android:text="咩咩咩米没灭"
        android:textSize="18sp" />
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/atext1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>
